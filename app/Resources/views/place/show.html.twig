{% extends 'base.html.twig' %}

{% block body %}
    <h1>Place</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ place.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ place.type }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ place.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ place.address }}</td>
            </tr>
            <tr>
                <th>Postal</th>
                <td>{{ place.postal }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ place.city }}</td>
            </tr>
            <tr>
                <th>Phonenumber</th>
                <td>{{ place.phonenumber }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ place.email }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ place.website }}</td>
            </tr>
            <tr>
                <th>Fecebook</th>
                <td>{{ place.fecebook }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ place.longitude }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ place.latitude }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('place_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('place_edit', { 'id': place.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
