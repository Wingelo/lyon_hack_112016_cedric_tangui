{% trans_default_domain 'FOSUserBundle' %}
<link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="wrap">
                <p class="form-title">
                    <h><i>B</i>ienvenue  dans <i>L</i>yon is <i>W</i>ild</p></h>
                <form class="login" action="{{ path("fos_user_security_check") }}" method="post">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
                    <input type="text" placeholder="Nom d'utilisateur" name="_username" value="{{ last_username }}" required="required" />
                    <input type="password" placeholder="Mot de passe" name="_password" required="required" />
                    <input type="submit" class="btn btn-success btn-sm" name="_submit" value="{{ 'security.login.submit'|trans }}" />

                </form>

                <form class="login" action="" method="post">
                    <a href="{{ path('register') }}"><input  title="" type="url" class="btn btn-success btn-sm" value="Inscris-toi" /></a>
                </form>



            </div>
        </div>
    </div>

</div>